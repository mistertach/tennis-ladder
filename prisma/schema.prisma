// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  PLAYER
}

enum LeagueStatus {
  DRAFT
  ACTIVE
  COMPLETED
}

enum MatchStatus {
  SCHEDULED
  COMPLETED
  CANCELLED
}

enum SubStatus {
  PENDING
  ACCEPTED
  REJECTED
}

enum Level {
  BEGINNER
  IMPROVER
  INTERMEDIATE
  ADVANCED
}

enum Handedness {
  RIGHT
  LEFT
  AMBIDEXTROUS
}

enum Gender {
  MALE
  FEMALE
}

model User {
  id         String      @id @default(cuid())
  email      String?     @unique
  password   String?     // Hashed password (optional for public players)
  name       String?
  role       Role        @default(PLAYER)
  level      Level       @default(BEGINNER)
  image      String?     // Avatar URL
  nationality String?    // Country code or flag emoji
  handedness Handedness? // Right, Left, or Ambidextrous
  gender     Gender?
  isDtaBoardMember Boolean @default(false)
  dtaJoinedDate    DateTime?
  dtaExpiryDate    DateTime?
  badgeNumber      String?
  isDependent      Boolean @default(false)
  primaryMemberId  String?
  
  primaryMember    User?   @relation("Dependents", fields: [primaryMemberId], references: [id])
  dependents       User[]  @relation("Dependents")
  profileImage     String?

  groups               GroupMember[]
  matchesAsPlayer1     Match[]       @relation("Player1")
  matchesAsPlayer2     Match[]       @relation("Player2")
  substitutionRequests SubstitutionRequest[]
  weeklyScores         WeeklyScore[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

enum LeagueType {
  SINGLES
  DOUBLES
}

model League {
  id            String       @id @default(cuid())
  title         String
  type          LeagueType   @default(SINGLES) // New field
  startDate     DateTime
  durationWeeks Int
  currentWeek   Int          @default(1)
  status        LeagueStatus @default(DRAFT)
  gamesPerMatch Int          @default(3)
  promotionCriteria String?  @db.Text
  
  groups Group[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Group {
  id        String   @id @default(cuid())
  leagueId  String
  tier      Int      // Level 1, 2, 3...
  court     String?  // e.g. "2 & 3"
  time      String?  // e.g. "5pm"
  day       String?  // e.g. "Monday"
  league    League   @relation(fields: [leagueId], references: [id], onDelete: Cascade) // Add Cascade delete for League deletion
  
  members   GroupMember[]
  matches   Match[]
  weeklyScores WeeklyScore[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GroupMember {
  id        String   @id @default(cuid())
  userId    String
  groupId   String
  user      User     @relation(fields: [userId], references: [id])
  group     Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  
  points          Int      @default(0)
  matchesPlayed   Int      @default(0)
  matchesWon      Int      @default(0)
  matchesLost     Int      @default(0)
  
  week            Int      @default(1) // New: track history
  rank            Int      @default(0) // New: Explicit seeding rank for this week

  @@unique([userId, groupId, week])
}

model Match {
  id        String      @id @default(cuid())
  groupId   String
  group     Group       @relation(fields: [groupId], references: [id], onDelete: Cascade)
  
  player1Id String
  player2Id String
  player1   User        @relation("Player1", fields: [player1Id], references: [id])
  player2   User        @relation("Player2", fields: [player2Id], references: [id])
  
  scorePlayer1 Int?
  scorePlayer2 Int?
  winnerId     String? 
  
  round     Int         @default(1) // Week number
  date      DateTime?
  status    MatchStatus @default(SCHEDULED)

  substitutionRequests SubstitutionRequest[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SubstitutionRequest {
  id        String    @id @default(cuid())
  matchId   String
  match     Match     @relation(fields: [matchId], references: [id], onDelete: Cascade)
  
  requesterId String
  requester   User      @relation(fields: [requesterId], references: [id])
  
  status    SubStatus @default(PENDING)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model WeeklyScore {
  id        String   @id @default(cuid())
  
  groupId   String
  group     Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  week      Int
  gamesWon  Int?     // Null = not played, 0 = played and lost
  subNeeded Boolean  @default(false)
  subName   String?  // New: Name of sub
  subContact String? // New: Contact info (phone/email)
  noShow    Boolean  @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([groupId, userId, week])
}
