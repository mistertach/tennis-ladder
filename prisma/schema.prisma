// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  PLAYER
}

enum LeagueStatus {
  DRAFT
  ACTIVE
  COMPLETED
}

enum MatchStatus {
  SCHEDULED
  COMPLETED
  CANCELLED
}

enum SubStatus {
  PENDING
  ACCEPTED
  REJECTED
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  role      Role     @default(PLAYER)
  image     String?  // Avatar URL
  
  groups               GroupMember[]
  matchesAsPlayer1     Match[]       @relation("Player1")
  matchesAsPlayer2     Match[]       @relation("Player2")
  substitutionRequests SubstitutionRequest[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model League {
  id            String       @id @default(cuid())
  title         String
  startDate     DateTime
  durationWeeks Int
  status        LeagueStatus @default(DRAFT)
  gamesPerMatch Int          @default(3)
  promotionCriteria String?  @db.Text
  
  groups Group[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Group {
  id        String   @id @default(cuid())
  leagueId  String
  tier      Int      // Level 1, 2, 3...
  league    League   @relation(fields: [leagueId], references: [id])
  
  members   GroupMember[]
  matches   Match[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GroupMember {
  id        String   @id @default(cuid())
  userId    String
  groupId   String
  user      User     @relation(fields: [userId], references: [id])
  group     Group    @relation(fields: [groupId], references: [id])
  
  points    Int      @default(0)
  
  @@unique([userId, groupId])
}

model Match {
  id        String      @id @default(cuid())
  groupId   String
  group     Group       @relation(fields: [groupId], references: [id])
  
  player1Id String
  player2Id String
  player1   User        @relation("Player1", fields: [player1Id], references: [id])
  player2   User        @relation("Player2", fields: [player2Id], references: [id])
  
  scorePlayer1 Int?
  scorePlayer2 Int?
  winnerId     String? 
  
  date      DateTime?
  status    MatchStatus @default(SCHEDULED)

  substitutionRequests SubstitutionRequest[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SubstitutionRequest {
  id        String    @id @default(cuid())
  matchId   String
  match     Match     @relation(fields: [matchId], references: [id])
  
  requesterId String
  requester   User      @relation(fields: [requesterId], references: [id])
  
  status    SubStatus @default(PENDING)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
